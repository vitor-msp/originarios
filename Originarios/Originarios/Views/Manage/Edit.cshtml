@model Originarios.Models.Usuario

@{
    ViewBag.Title = "Editar Conta";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Edit", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Meus dados</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_usu)

        <div class="form-group">
            <label class="col-md-2 control-label" for="nome">Nome:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.nome, new { htmlAttributes = new { @class = "form-control", name = "nome", @maxlength = "50" } })
                @Html.ValidationMessageFor(model => model.nome, "", new { @class = "text-danger" })
            </div>
        </div>

        @*<div class="form-group">
            <label class="col-md-2 control-label" for="rg">RG:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.rg, new { htmlAttributes = new { @class = "form-control", name = "rg", @maxlength = "10" } })
                @Html.ValidationMessageFor(model => model.rg, "", new { @class = "text-danger" })
            </div>
        </div>*@

        @*<div class="form-group">
            <label class="col-md-2 control-label" for="cpf">CPF:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.cpf, new { htmlAttributes = new { @class = "form-control", name = "cpf", id = "cpf" } })
                @Html.ValidationMessageFor(model => model.cpf, "", new { @class = "text-danger" })
            </div>
        </div>*@

        <div class="form-group">
            <label class="col-md-2 control-label" for="dtNasc">Data de nascimento:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.dt_nasc, new { htmlAttributes = new { type = "date", @class = "form-control", name = "dtNasc", id = "dtNasc" } })
                @Html.ValidationMessageFor(model => model.dt_nasc, "", new { @class = "text-danger" })
                <input type="hidden" value="@ViewBag.dtNasc" id="hiddenDtNasc" style="display: none;" />
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label" for="email">E-mail:</label>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.email, new { type = "email", @class = "form-control", name = "email", disabled = "disabled", @readonly = "readonly" })
                @Html.HiddenFor(model => model.email)
            </div>
        </div>

        <hr />

        <div class="form-group d-flex flex-row">
            <div class="col-md-2 ajuste-botao">
                @Html.ActionLink("Voltar", "Index", "Manage", routeValues: null, htmlAttributes: new { @class = "btn btn-default" })
            </div>
            <div class="col-md-10">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}