@model IEnumerable<Originarios.Models.Postagem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if(ViewBag.msg != null)
{
    <h5 class="text-success">@ViewBag.msg</h5>
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.corpo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nm_img1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.vb_img1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nm_img2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.vb_img2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nm_img3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.vb_img3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nm_img4)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.vb_img4)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.valor)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <div class="">
        <div class="col-md-4">
            <div class="card justify-content-center" style="">
                <img src="@Url.Action("ObterImgNaView", "Postagens", new { id = item.id_post, img = 1 })" class="card-img-top" alt="..." style="width: 26rem" height="auto">
                <img src="@Url.Action("ObterImgNaView", "Postagens", new { id = item.id_post, img = 2 })" class="card-img-top" alt="..." style="width: 26rem" height="auto">
                <img src="@Url.Action("ObterImgNaView", "Postagens", new { id = item.id_post, img = 3 })" class="card-img-top" alt="..." style="width: 26rem" height="auto">
                <img src="@Url.Action("ObterImgNaView", "Postagens", new { id = item.id_post, img = 4 })" class="card-img-top" alt="..." style="width: 26rem" height="auto">
                <div class="card-body">
                    <h5 class="card-title"> @Html.DisplayFor(modelItem => item.titulo) </h5>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.descricao)</p>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.corpo)</p>
                </div>
            </div>

            <div class="col-md-15">
                @Html.ActionLink("Detalhes", "Details", "Postagens", routeValues: new { id = item.id_post }, htmlAttributes: new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
}
</table>
