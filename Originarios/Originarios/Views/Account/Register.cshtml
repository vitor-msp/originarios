@model Originarios.Models.UsuarioRegistro
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Criar uma nova conta.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    @***********************************************************************************************@

    <div class="form-group">
        <label class="col-md-2 control-label" for="nome">Nome:</label>
        <div class="col-md-10" name="nome">
            @Html.TextBoxFor(m => m.usuario.nome, new { @class = "form-control", @maxlength = "50" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label" for="cpf">CPF:</label>
        <div class="col-md-10" name="cpf">
            @Html.TextBoxFor(m => m.usuario.cpf, new { @class = "form-control", @maxlength = "11" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label" for="dtNasc">Data de nascimento:</label>
        <div class="col-md-10" name="dtNasc">
            @Html.TextBoxFor(m => m.usuario.dt_nasc, new { @class = "form-control", @type = "date" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label" for="cidade">Cidade:</label>
        <div class="col-md-10" name="cidade">
            @Html.TextBoxFor(m => m.usuario.cidade, new { @class = "form-control", @maxlength = "30" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label" for="uf">UF:</label>
        <div class="col-md-10" name="uf">
            @Html.TextBoxFor(m => m.usuario.estado, new { @class = "form-control", @maxlength = "2" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label" for="ddd">DDD:</label>
        <div class="col-md-10" name="ddd">
            @Html.TextBoxFor(m => m.usuario.ddd, new { @class = "form-control", @maxlength = "2" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label" for="wpp">WhatsApp:</label>
        <div class="col-md-10" name="wpp">
            @Html.TextBoxFor(m => m.usuario.whatsapp, new { @class = "form-control", @maxlength = "10" })
        </div>
    </div>

    @***********************************************************************************************@
    <div class="form-group">
        @Html.LabelFor(m => m.registro.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.registro.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.registro.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.registro.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.registro.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.registro.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Registrar" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
