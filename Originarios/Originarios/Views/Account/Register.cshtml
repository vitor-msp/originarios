@model Originarios.Models.UsuarioRegistro
@{ ViewBag.Title = "Registrar"; }

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="container-fluid px-0 pb-5">
        <div class="my-5 text-center">
            <h1 class="display-4 text-white text-uppercase py-3">Registrar-me</h1>
            <span class="h5 d-block text-white text-uppercase">Prezados clientes, inscrevam-se para ficarem cientes das nossas ofertas</span>
        </div>
        <div class="row">
            <div class="col-lg mb-2 mx-auto w-100 px-0">
                <div class="bg-transparent rounded">
                    <h2 class="h4 text-white text-center text-uppercase mb-5">Formulário de inscrição</h2>
                    <div class="row">

                        <div class="form-group col-md-5 pb-4">
                            <label for="form_name">Nome completo *</label>
                            @Html.TextBoxFor(m => m.usuario.nome, new { @class = "form-control", @maxlength = "50", id = "form_nome", name = "nome", placeholder = "Digite o seu nome completo *", required = "required", dataError = "O nome é necessário." })
                        </div>

                        <div class="form-group col-md-3 pb-4">
                            <label for="inputCPF">CPF *</label>
                            @Html.TextBoxFor(m => m.usuario.cpf, new { @class = "form-control", @maxlength = "11", id = "inputCPF", placeholder = "Digite o seu CPF *", required = "required", dataError = "O CPF é necessário." })
                        </div>

                        <div class="form-group col-md-4 pb-4">
                            <label for="inputCPF">Data de Nascimento *</label>
                            @Html.TextBoxFor(m => m.usuario.dt_nasc, new { @class = "form-control", @type = "date", id = "inputDate", placeholder = "Data de Nascimento *", required = "required", pattern = "[0-9]{4}-[0-9]{2}-[0-9]{2}", dataError = "A data de nascimento é necessária." })
                        </div>

                        <div class="form-group col-md-2 pb-4">
                            <label for="inputCPF">DDD *</label>
                            @Html.TextBoxFor(m => m.usuario.ddd, new { @class = "form-control", @maxlength = "2", id = "inputDDD", placeholder = "Inserir DDD *", required = "required", dataError = "O DDD é necessário." })
                        </div>

                        <div class="form-group col-md-4 pb-4">
                            <label for="inputCPF">WhatsApp *</label>
                            @Html.TextBoxFor(m => m.usuario.whatsapp, new { @class = "form-control", @maxlength = "10", id = "inputWhatsApp", placeholder = "Informe a seu WhatsApp *", required = "required", dataError = "Informar o WhatsApp é necessário." })
                        </div>

                        <div class="form-group col-md-3 pb-4">
                            <label for="inputCidade">Cidade *</label>
                            @Html.TextBoxFor(m => m.usuario.cidade, new { @class = "form-control", @maxlength = "30", id = "inputCidade", placeholder = "Digite a cidade *", required = "required", dataError = "O nome da cidade é necessário." })
                        </div>

                        <div class="form-group col-md-3 pb-4">
                            <label for="inputEstado">Estado *</label>
                            @Html.TextBoxFor(m => m.usuario.estado, new { @class = "form-control", @maxlength = "2", id = "inputEstado", placeholder = "Digite a UF *", required = "required", dataError = "O nome da UF é necessário." })
                        </div>

                        <div class="form-group col-md-5 pb-4">
                            <label for="form_email">E-mail *</label>
                            @Html.TextBoxFor(m => m.registro.Email, new { @class = "form-control", id = "form_email"})
                        </div>

                        <div class="form-group col-md-4 pb-4">
                            <label for="inputSenha">Senha *</label>
                            @Html.PasswordFor(m => m.registro.Password, new { @class = "form-control", id = "inputSenha" })
                        </div>

                        <div class="form-group col-md-4 pb-4">
                            <label for="inputSenha">Confirmar senha *</label>
                            @Html.PasswordFor(m => m.registro.ConfirmPassword, new { @class = "form-control", id = "inputSenha" })
                        </div>

                    </div>
                    <div class="form-check">
                        <label class="form-check-label pb-3 px-2">
                            <input type="checkbox" class="form-check-input" required="required" data-error="Aceitar nossos termos é necessário.">
                            Li e concordo com os termos, condições e com a política de privacidade da organização.
                        </label>
                    </div>
                    <div class="px-2"><button type="submit" class="btn btn-warning">Concluir registro</button></div>
                </div>
            </div>
        </div>
    </div>
    <br>
}