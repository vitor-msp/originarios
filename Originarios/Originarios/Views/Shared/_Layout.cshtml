<!DOCTYPE html>
<html lang="pt-br">
<head>
    <!-- Meta tags obrigatórias -->
    <meta charset="utf-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

    <!-- Título -->
    <title>@ViewBag.Title - Originários</title>

    <!-- Ícone -->
    <link rel="shortcut icon" href="~/Images/originarios-cortado.png" type="image/x-icon" />

    <!-- CSS Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    @Styles.Render("~/Content/css")
    <style>
        .borda-sec-img {
            background-color: rgba(0,0,0,0.25);
            border: 2px solid var(--cor-clara);
        }

        .bg-pre-crop {
            background-color: rgba(0,0,0,0.5);
        }
    </style>

    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v5.15.4/js/all.js" crossorigin="anonymous"></script>
    <!-- CSS Cropper JS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/2.0.0-alpha.2/cropper.min.css" integrity="sha512-6QxSiaKfNSQmmqwqpTNyhHErr+Bbm8u8HHSiinMEz0uimy9nu7lc/2NaXJiUJj2y4BApd5vgDjSHyLzC8nP6Ng==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- biblioteca Animation-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
</head>

<body class="text-light">
    <!---------- início div principal ---------->
    <div id="divPrincipal" class="row">
        <div class="col-12 container-fluid d-flex flex-column justify-content-between">
            <!---------- início nav ---------->
            <nav class="row p-none">
                <div id="nav" class="col-6 col-lg-8 navbar navbar-expand-lg navbar-light animate__animated animate__fadeInDown">
                    <div class="container-fluid justify-content-start">
                        <button class="navbar-toggler my-2 my-lg-0 bg-transparent" type="button" data-bs-toggle="collapse" data-bs-target="#navToggler" aria-controls="navToggler" aria-expanded="false" aria-label="Menu de navegação">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <!--logo Originários-->
                        <a href="/Home/Index" class="navbar-brand" style="color: white; filter: invert(100%);">
                            <picture>
                                <source media="(max-width:597px)" srcset="~/Images/originarios-cortado.png" width="49" height="auto" class="imgElement img-responsive">
                                <source media="(min-width:597px)" srcset="~/Images/originarios.png" width="170" height="auto" class="imgElement img-responsive">
                                <img src="~/Images/originarios-cortado.png" width="49" height="auto" class="imgElement img-responsive">
                            </picture>
                        </a>
                        <div class="collapse navbar-collapse" id="navToggler">
                            <ul class="navbar-nav me-auto mb-lg-0">
                                <li class="nav-item">
                                    <a class="nav-link py-3 bg-transparent" aria-current="page" href="/Home">
                                        <img src="~/Images/inicio.png" width="20" height="20" style="margin: -3px 10px 0 0;" />Home
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link py-3 bg-transparent" href="/Produtos">
                                        <img src="~/Images/produtos.png" width="20" height="20" style="margin: -3px 10px 0 0;" />Produtos
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link py-3 bg-transparent" href="/Contato">
                                        <img src="~/Images/fale.png" width="20" height="20" style="margin: -3px 10px 0 0;" />Contato
                                    </a>
                                </li>
                                @if (Request.IsAuthenticated)
                                {
                                    <li class="nav-item">
                                        @Html.ActionLink("Meus Produtos", "Index", "Postagens", null, htmlAttributes: new { @class = "nav-link px-4 py-3" })
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="col-6 col-lg-4 navbar-light d-flex justify-content-center align-items-center animate__animated animate__fadeInDown">
                    @Html.Partial("_LoginPartial")
                </div>

            </nav>
            <!---------- fim nav ---------->
            <!---------- início main ---------->
            <main class="row">

                @if (ViewBag.Title == "Home Page")
                {<!--------------------------------------------Carrosel------------------------------------------------->
                    <!-------- início SlideBar -------->
                    <div id="carouselSite" class="carousel slide px-0" data-bs-ride="carousel">
                        <div class="carousel-indicators">
                            <button type="button" data-bs-target="#carouselSite" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                            <button type="button" data-bs-target="#carouselSite" data-bs-slide-to="1" aria-label="Slide 2"></button>
                            <button type="button" data-bs-target="#carouselSite" data-bs-slide-to="2" aria-label="Slide 3"></button>
                            <button type="button" data-bs-target="#carouselSite" data-bs-slide-to="3" aria-label="Slide 4"></button>
                        </div>

                        <div class="carousel-inner">
                            <!-------- img1 -------->
                            <div class="carousel-item active">
                                <img src="~/Images/img1.png" class="img-fluid d-block img1">
                                <div class="carousel-caption dez_b mb-5 d-none d-md-block">
                                    <h1 class="display-2 color_Text1" style="color: #ffc107; text-shadow: 2px 2px 8px black;">Aqui você encontra</h1>
                                    <h3>Produtos Indigenas</h3>
                                    <button type="button" class="btn btn-outline-light btn-lg">Promoções</button>
                                    <button type="button" class="btn btn-warning btn-lg">Artesanato</button>
                                </div>
                            </div>
                            <!-------- img2 -------->
                            <div class="carousel-item">
                                <img src="~/Images/img2.png" class="img-fluid d-block img1">
                                <div class="carousel-caption dez_b mb-5 d-none d-md-block">
                                    <h1 class="display-2 color_Text1" style="color: #ffc107; text-shadow: 2px 2px 8px black;">Aqui você encontra</h1>
                                    <h3>Produtos Indigenas</h3>
                                    <button type="button" class="btn btn-outline-light btn-lg">Promoções</button>
                                    <button type="button" class="btn btn-warning btn-lg">Artesanato</button>
                                </div>
                            </div>
                            <!-------- img3 -------->
                            <div class="carousel-item">
                                <img src="~/Images/img3.png" class="img-fluid d-block img1">
                                <div class="carousel-caption dez_b mb-5 d-none d-md-block">
                                    <h1 class="display-2 color_Text1 " style="color: #ffc107; text-shadow: 2px 2px 8px black;">Aqui você encontra</h1>
                                    <h3>Produtos Indigenas</h3>
                                    <button type="button" class="btn btn-outline-light btn-lg">Promoções</button>
                                    <button type="button" class="btn btn-warning btn-lg">Artesanato</button>
                                </div>
                            </div>
                            <!-------- img4 -------->
                            <div class="carousel-item">
                                <img src="~/Images/img4.png" class="img-fluid d-block img1">
                                <div class="carousel-caption dez_b mb-5 d-none d-md-block">
                                    <h1 class="display-2 color_Text1" style="color: #ffc107; text-shadow: 2px 2px 8px black;">Aqui você encontra</h1>
                                    <h3>Produtos Indigenas</h3>
                                    <button type="button" class="btn btn-outline-light btn-lg">Promoções</button>
                                    <button type="button" class="btn btn-warning btn-lg">Artesanato</button>
                                </div>
                            </div>
                        </div>

                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselSite" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden"></span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselSite" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden"></span>
                        </button>
                    </div>
                    <!---------- Fim do SlideBar ---------->
                }

                <div class="col-12 col-md-10 col-lg-10 mx-auto p-4 px-md-0">
                    @RenderBody()
                </div>
            </main>
            <!---------- fim main ---------->
            <!---------- início footer ---------->
            <footer class="row text-light p-3">
                <div class="copyright">
                    <div class="container">
                        <div class="row">
                            <div class=" col-md-12 text-center text-md-left">
                                <p class="ml-auto">
                                    &copy; @DateTime.Now.Year - Originários Recode Pro - 2021 Projeto Final - Squad41 | <span>Contato:</span> <a class="text-light" href="mailto:squad41recode@gmail.com">squad41recode@gmail.com</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </footer>
            <!---------- fim footer ---------->
        </div>
    </div>
    <!---------- fim div principal ---------->
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <!-- JavaScript Cropper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/2.0.0-alpha.2/cropper.min.js" integrity="sha512-IlZV3863HqEgMeFLVllRjbNOoh8uVj0kgx0aYxgt4rdBABTZCl/h5MfshHD9BrnVs6Rs9yNN7kUQpzhcLkNmHw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <!-- JavaScript Geral -->
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/Script.js" defer></script>

    <!-- Bootstrap core JS-->
    <!-- Core theme JS-->
    <script src="js/scripts.js"></script>
    <!-- * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *-->
    <!-- * *                               SB Forms JS                               * *-->
    <!-- * * Activate your form at https://startbootstrap.com/solution/contact-forms * *-->
    <!-- * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *-->
    <script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script>
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>

    <script>
        AOS.init({
            duration: 1700,
        });

    </script>
    @*</div>*@
</body>
</html>