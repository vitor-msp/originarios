@model Originarios.Models.Contato

@{
    ViewBag.Title = "Contato";
}

@if(ViewBag.enviado)
{
    <p>Agradecemos o seu contato! Em breve retornaremos.</p>
}

<div class="container-fluid px-0">
    <div class="text-center my-4">
        <h1 class="display-4 text-white text-uppercase py-3">Fale conosco</h1>
        <span class="h5 d-block text-white text-uppercase">Prezados clientes, em que lhe posso ser útil?</span>
    </div>
    <div class="row">
        <div class="col-lg-7 mb-2 mx-auto w-100 p-0">
            <div class="card mt-2 mx-auto bg-transparent border-0">
                <div class="card-body bg-transparent px-0">
                    <div class="container-fluid px-0">
                        <h2 class="h4 text-white text-center text-uppercase mb-4">Formulário de solicitações</h2>
                        @using (Html.BeginForm("Create", "Contatos", FormMethod.Post, new { id = "contact-form", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="controls">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group text-white">
                                            <label class="my-2" for="form_name">Nome completo *</label>

                                            @if (ViewBag.estaLogado)
                                            {
                                                @Html.EditorFor(model => model.nome, new { htmlAttributes = new { @type = "text", id = "form_name", name = "name", @class = "form-control", placeholder = "Digite o seu nome completo *", required = "required", dataError = "O nome é necessário.", @maxlength = "50", @readonly = "readonly", @Value = ViewBag.nome } })
                                            }
                                            else
                                            {
                                                @Html.EditorFor(model => model.nome, new { htmlAttributes = new { @type = "text", id = "form_name", name = "name", @class = "form-control", placeholder = "Digite o seu nome completo *", required = "required", dataError = "O nome é necessário.", @maxlength = "50" } })
                                            }
                                            @Html.ValidationMessageFor(model => model.nome, "", new { @class = "text-danger" })

                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group text-white">
                                            <label class="my-2" for="form_lastname">Endereço *</label>

                                            @if (ViewBag.estaLogado)
                                            {
                                                @Html.EditorFor(model => model.endereco, new { htmlAttributes = new { @type = "text", id = "form_lastname", name = "surname", @class = "form-control", placeholder = "Digite o seu endereço *", required = "required", dataError = "O endereço é necessário.", @maxlength = "70", @Value = ViewBag.endereco } })
                                            }
                                            else
                                            {
                                                @Html.EditorFor(model => model.endereco, new { htmlAttributes = new { @type = "text", id = "form_lastname", name = "surname", @class = "form-control", placeholder = "Digite o seu endereço *", required = "required", dataError = "O endereço é necessário.", @maxlength = "70" } })
                                            }
                                            @Html.ValidationMessageFor(model => model.endereco, "", new { @class = "text-danger" })

                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group text-white">
                                            <label class="my-2" for="form_email">e-mail *</label>

                                            @if (ViewBag.estaLogado)
                                            {
                                                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @type = "email", id = "form_email", name = "email", @class = "form-control", placeholder = "Digite o seu e-mail *", required = "required", dataError = "É necessário um e-mail válido.", @maxlength = "30", @readonly = "readonly", @Value = ViewBag.email } })
                                            }
                                            else
                                            {
                                                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @type = "email", id = "form_email", name = "email", @class = "form-control", placeholder = "Digite o seu e-mail *", required = "required", dataError = "É necessário um e-mail válido.", @maxlength = "30" } })
                                            }
                                            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                                        
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group text-white">
                                            <label class="my-2" for="form_need">Especifique sua necessidade *</label>

                                            @Html.DropDownListFor(model => model.assunto, new SelectList(ViewBag.assunto, "texto", "texto"), "--Selecione sua dúvida--", new { @class = "form-control", id = "form_need", name = "need", required = "required", dataError = "Por favor, especifique sua necessidade.", @maxlength = "30" })
                                            @Html.ValidationMessageFor(model => model.assunto, "", new { @class = "text-danger" })

                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group text-white">
                                            <label class="my-2" for="form_message"> Mensagem *</label>

                                            @Html.TextAreaFor(model => model.mensagem, 4, 10, htmlAttributes: new { id = "form_message", name = "message", @class = "form-control", placeholder = "Escreva a sua mensagem aqui.", required = "required", dataError = "Por favor, deixe-nos uma mensagem.", @maxlength = "2000" })
                                            @Html.ValidationMessageFor(model => model.mensagem, "", new { @class = "text-danger" })

                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <input type="submit" class="btn bg-primary btn-send pt-2 btn-block my-3" value="Enviar mensagem">
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col mb-5 mx-auto p-0">
            <div class="card mt-2 mx-auto bg-transparent border-0">
                <h2 class="h4 text-white text-center text-uppercase py-3">Onde estamos</h2>
                <div class="text-center text-white">
                    <p>Alameda Benevento, 429 - Itaigara, Salvador - BA</p>
                    <p>Horário de atendimento: 07:00 - 19:00 (seg à sexta)</p>
                    <p>Telefone: (71) 3354-2789 / (71) 98765-4321</p>
                    <p>e-mail: originarios_recode@hotmail.com</p>
                </div>
                <h2 class="h4 text-white text-center text-uppercase py-3">Redes sociais</h2>
                <div class="text-center text-white">
                    <p>https://www.instagram.com/originarios.recode/</p>
                    <p>https://www.facebook.com/originarios.recode/</p>
                    <p>https://www.linkedin.com/originarios.recode/</p>
                </div>
            </div>
        </div>
    </div>
</div>